<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- Header (light pink) -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:background="#F8DFF4">

        <ImageView
            android:id="@+id/back_btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_arrow_back"
            android:contentDescription="back"
            android:tint="#000000"/>

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Daily Pain Assessment"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginStart="12dp"
            android:textColor="#000000"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="72dp"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="How much pain are you in today?"
                android:textSize="16sp"
                android:textColor="#111111"/>

            <!-- numeric seekbar row and labels -->
            <SeekBar
                android:id="@+id/seekPain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="10"
                android:layout_marginTop="12dp" />

            <!-- small numeric labels 0..10 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="6dp"
                android:weightSum="11">
                <!-- create 11 textviews -->
                <TextView android:layout_weight="1" android:layout_width="0dp" android:layout_height="wrap_content" android:text="0" android:gravity="center" android:textColor="#111"/>
                <TextView android:layout_weight="1" android:layout_width="0dp" android:layout_height="wrap_content" android:text="1" android:gravity="center" android:textColor="#111"/>
                <TextView android:layout_weight="1" android:layout_width="0dp" android:layout_height="wrap_content" android:text="2" android:gravity="center" android:textColor="#111"/>
                <TextView android:layout_weight="1" android:layout_width="0dp" android:layout_height="wrap_content" android:text="3" android:gravity="center" android:textColor="#111"/>
                <TextView android:layout_weight="1" android:layout_width="0dp" android:layout_height="wrap_content" android:text="4" android:gravity="center" android:textColor="#111"/>
                <TextView android:layout_weight="1" android:layout_width="0dp" android:layout_height="wrap_content" android:text="5" android:gravity="center" android:textColor="#111"/>
                <TextView android:layout_weight="1" android:layout_width="0dp" android:layout_height="wrap_content" android:text="6" android:gravity="center" android:textColor="#111"/>
                <TextView android:layout_weight="1" android:layout_width="0dp" android:layout_height="wrap_content" android:text="7" android:gravity="center" android:textColor="#111"/>
                <TextView android:layout_weight="1" android:layout_width="0dp" android:layout_height="wrap_content" android:text="8" android:gravity="center" android:textColor="#111"/>
                <TextView android:layout_weight="1" android:layout_width="0dp" android:layout_height="wrap_content" android:text="9" android:gravity="center" android:textColor="#111"/>
                <TextView android:layout_weight="1" android:layout_width="0dp" android:layout_height="wrap_content" android:text="10" android:gravity="center" android:textColor="#111"/>
            </LinearLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSave"
                android:layout_width="wrap_content"
                android:layout_height="44dp"
                android:layout_marginTop="12dp"
                android:text="Save"
                android:backgroundTint="#F9DFF6"
                android:textColor="#000"
                app:cornerRadius="20dp"/>

            <!-- Chart (MPAndroidChart) -->
            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/lineChart"
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:layout_marginTop="20dp" />

            <!-- Recent header -->
            <TextView
                android:id="@+id/tvRecentTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Recent pain entries"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="18dp"
                android:textColor="#111111"/>

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#DDDDDD"
                android:layout_marginTop="12dp"/>

            <!-- RecyclerView -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvEntries"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"/>

        </LinearLayout>

    </ScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
