<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="12dp"
    card_view:cardCornerRadius="10dp"
    card_view:cardElevation="4dp"
    card_view:cardUseCompatPadding="true"
    android:foreground="?android:attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="14dp"
        android:background="#E7F5FF">

        <!-- Header row: emoji + title -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- emoji from code: ðŸ’Š -->
            <TextView
                android:id="@+id/tvEmoji"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:gravity="center"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tvHeaderTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Medications"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#F5A1D9" />
        </LinearLayout>

        <!-- Inner light-pink block with medication data -->
        <LinearLayout
            android:id="@+id/innerContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#FCE7FF"
            android:padding="12dp"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/tvMedName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Paracetamol"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/tvDose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Dose: 2"
                android:textSize="14sp"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/tvPeriod"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Period: daily 3 times"
                android:textSize="14sp"
                android:textColor="#000000" />
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>
