<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- TOP BAR -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="#F8DFF4"
            android:paddingHorizontal="15dp"
            android:elevation="4dp">

            <!-- Back Button -->
            <ImageView
                android:id="@+id/back_btn"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_arrow_back"
                android:tint="#000" />

            <!-- Icon -->
            <ImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginStart="15dp"
                android:background="@drawable/circle_white"
                android:padding="6dp"
                android:src="@drawable/doctor" />

            <!-- Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="Doctor Signup"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textColor="#000" />
        </LinearLayout>

        <!-- FORM -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="18dp"
            android:padding="12dp">

            <!-- Doctor ID (now EDITABLE) -->
            <EditText
                android:id="@+id/etDoctorId"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:hint="Doctor ID (e.g. doc_1001)"
                android:padding="12dp"
                android:layout_marginTop="8dp"
                android:background="#DFF4FB"
                android:textColor="#000"
                android:textColorHint="#666"
                android:inputType="textNoSuggestions"
                android:maxLines="1"
                android:singleLine="true"
                android:maxLength="20"
                android:elevation="2dp" />

            <EditText
                android:id="@+id/etFullName"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:hint="Full Name"
                android:padding="12dp"
                android:layout_marginTop="12dp"
                android:background="#DFF4FB"
                android:textColor="#000"
                android:textColorHint="#666"
                android:inputType="textPersonName"
                android:maxLines="1"
                android:singleLine="true"
                android:maxLength="50"
                android:elevation="2dp" />

            <EditText
                android:id="@+id/etEmail"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:hint="Email Address"
                android:padding="12dp"
                android:layout_marginTop="12dp"
                android:background="#DFF4FB"
                android:textColor="#000"
                android:textColorHint="#666"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:singleLine="true"
                android:maxLength="100"
                android:elevation="2dp" />

            <EditText
                android:id="@+id/etPhone"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:hint="Phone Number"
                android:padding="12dp"
                android:layout_marginTop="12dp"
                android:background="#DFF4FB"
                android:textColor="#000"
                android:textColorHint="#666"
                android:inputType="phone"
                android:maxLines="1"
                android:singleLine="true"
                android:maxLength="10"
                android:digits="0123456789"
                android:elevation="2dp" />

            <!-- Specialization -->
            <EditText
                android:id="@+id/etSpecialization"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:hint="Specialization"
                android:padding="12dp"
                android:layout_marginTop="12dp"
                android:background="#DFF4FB"
                android:textColor="#000"
                android:textColorHint="#666"
                android:inputType="textCapWords"
                android:maxLines="1"
                android:singleLine="true"
                android:maxLength="50"
                android:elevation="2dp" />

            <EditText
                android:id="@+id/etPassword"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:hint="Password"
                android:padding="12dp"
                android:layout_marginTop="12dp"
                android:background="#DFF4FB"
                android:textColor="#000"
                android:textColorHint="#666"
                android:inputType="textPassword"
                android:maxLines="1"
                android:singleLine="true"
                android:maxLength="20"
                android:elevation="2dp" />

            <EditText
                android:id="@+id/etConfirmPassword"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:hint="Confirm Password"
                android:padding="12dp"
                android:layout_marginTop="12dp"
                android:background="#DFF4FB"
                android:textColor="#000"
                android:textColorHint="#666"
                android:inputType="textPassword"
                android:maxLines="1"
                android:singleLine="true"
                android:maxLength="20"
                android:elevation="2dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnPatient"
                android:layout_width="260dp"
                android:layout_height="60dp"
                android:layout_marginTop="22dp"
                android:layout_gravity="center"
                android:text="SUBMIT"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold"
                android:backgroundTint="#F9DFF6"
                app:cornerRadius="30dp" />

        </LinearLayout>

    </LinearLayout>
</ScrollView>
