<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/root"
    android:background="#F5F5F5">

    <!-- HEADER -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp"
        android:background="#F8DFF4">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_arrow_back"
            app:tint="#000000"/>

        <TextView
            android:layout_marginStart="16dp"
            android:text="Disease Activity Score"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <!-- CONTENT -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="72dp"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- STEPS -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingBottom="12dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="24dp">

                    <TextView
                        android:text="✓"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:background="@drawable/step_completed_circle"/>

                    <TextView
                        android:text="Tender Joints"
                        android:textSize="12sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#B0B0B0"/>
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="24dp">

                    <TextView
                        android:text="✓"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:background="@drawable/step_completed_circle"/>

                    <TextView
                        android:text="Swollen Joints"
                        android:textSize="12sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#B0B0B0"/>
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <TextView
                        android:text="3"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:background="@drawable/step_active_circle"/>

                    <TextView
                        android:text="Assessment"
                        android:textSize="12sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textColor="#F06292"/>
                </LinearLayout>
            </LinearLayout>

            <!-- TITLE -->

            <!-- PATIENT GLOBAL -->
            <TextView
                android:text="Patient Global Assessment"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"/>

            <SeekBar
                android:id="@+id/seekPatient"
                android:max="10"
                android:layout_width="match_parent"
                android:thumbTint="#F06292"
                android:progressTint="#FF69B4"
                android:progress="10"
                android:progressBackgroundTint="#FFC0CB"
                android:layout_height="32dp"/>

            <TextView
                android:id="@+id/tvPatientValue"
                android:text="0.0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#F06292"
                android:gravity="center"/>

            <!-- EVALUATOR -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Step 3: Assessment &amp; CRP"
                android:textColor="#F06292"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:text="Evaluator Assessment"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"/>

            <SeekBar
                android:id="@+id/seekEvaluator"
                android:max="10"
                android:layout_width="match_parent"
                android:thumbTint="#F06292"
                android:layout_height="32dp"/>

            <TextView
                android:id="@+id/tvEvaluatorValue"
                android:text="0.0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#F06292"
                android:gravity="center"/>

            <!-- CRP -->
            <TextView
                android:text="CRP (mg/dL)"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"/>

            <EditText
                android:id="@+id/edtCrp"
                android:hint="Enter CRP"
                android:inputType="numberDecimal"
                android:background="@drawable/crp_box"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <!-- BUTTON -->
            <Button
                android:id="@+id/btnCalculate"
                android:text="Calculate &amp; Save"
                android:layout_marginTop="24dp"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:textColor="#FFFFFF"
                android:backgroundTint="#F06292"/>
        </LinearLayout>
    </ScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
