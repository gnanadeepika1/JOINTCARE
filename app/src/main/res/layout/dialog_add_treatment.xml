<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Medication Name -->
        <EditText
            android:id="@+id/etMedicationName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Medication Name"
            android:inputType="textCapWords"
            android:padding="10dp"
            android:layout_marginBottom="8dp"/>

        <!-- Dose -->
        <EditText
            android:id="@+id/etDose"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Dose"
            android:inputType="text"
            android:padding="10dp"
            android:layout_marginBottom="8dp"/>

        <!-- Route (Dropdown) -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Route"
            android:textStyle="bold"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"/>

        <Spinner
            android:id="@+id/spinnerRoute"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"/>

        <!-- Frequency (number) -->
        <EditText
            android:id="@+id/etFrequencyNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Frequency (number)"
            android:inputType="number"
            android:padding="10dp"
            android:layout_marginBottom="8dp"/>

        <!-- Frequency text -->
        <EditText
            android:id="@+id/etFrequencyText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Frequency Text (e.g., Daily, BD)"
            android:inputType="text"
            android:padding="10dp"
            android:layout_marginBottom="8dp"/>

        <!-- Time Period (weeks) -->
        <EditText
            android:id="@+id/etTimePeriodWeeks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Time Period (weeks)"
            android:inputType="number"
            android:padding="10dp"
            android:layout_marginBottom="8dp"/>

    </LinearLayout>
</ScrollView>
