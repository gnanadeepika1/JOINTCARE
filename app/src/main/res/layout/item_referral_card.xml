<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="12dp"
    card_view:cardCornerRadius="10dp"
    card_view:cardElevation="4dp"
    card_view:cardUseCompatPadding="true"
    android:foreground="?android:attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="14dp"
        android:background="#E7F5FF">

        <!-- Title row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/icReferral"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:src="@android:drawable/ic_menu_send"
                android:tint="#F06292"/>

            <TextView
                android:id="@+id/tvReferralTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Referral Details"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#F48FB1"/>
        </LinearLayout>

        <!-- Referral message (NOW light pink) -->
        <TextView
            android:id="@+id/tvReferralMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:background="#F8DFF4"
            android:text="Referral text goes here"
            android:textColor="#000000"
            android:textSize="16sp" />

        <!-- Patient ID -->
        <TextView
            android:id="@+id/tvReferralPatientId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Patient ID: -----"
            android:textSize="14sp"
            android:textColor="#555555"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>
