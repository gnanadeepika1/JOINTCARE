<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#EEEEEE">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="20dp">

        <!-- Top Spacer -->
        <View
            android:layout_width="match_parent"
            android:layout_height="40dp" />

        <!-- Title -->
        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My Joints"
            android:textColor="#D46BC1"
            android:textSize="36sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-light"
            android:layout_marginBottom="20dp" />

        <!-- Illustration Image -->
        <!-- CHANGED TO SYSTEM ICON TO TEST. If this works, your splash_screen image was the problem. -->
        <ImageView
            android:id="@+id/imgIllustration"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:src="@drawable/splash_screen"
            android:layout_marginBottom="20dp"
            android:adjustViewBounds="true" />


        <!-- Quote -->
        <TextView
            android:id="@+id/txtQuote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Joints are the silent architects of graceful movement."
            android:textColor="#9C27B0"
            android:textSize="18sp"
            android:gravity="center"
            android:layout_marginBottom="40dp"
            android:fontFamily="sans-serif-medium" />

        <!-- Fixed Button -->
        <Button
            android:id="@+id/btnExplore"
            android:layout_width="260dp"
            android:layout_height="60dp"
            android:text="Explore More"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="20sp"
            android:backgroundTint="#F9DFF6"
            app:cornerRadius="30dp"/>

    </LinearLayout>
</ScrollView>
