<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="12dp"
    card_view:cardCornerRadius="10dp"
    card_view:cardElevation="4dp"
    card_view:cardUseCompatPadding="true"
    android:foreground="?android:attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="14dp">

        <!-- Blue inner container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="14dp"
            android:background="#E7F5FF">

            <!-- Title row: icon + text -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/ic_treatment"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:src="@drawable/treatmen"
                    android:layout_marginEnd="8dp"/>

                <TextView
                    android:id="@+id/tvTreatmentTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="Treatment Details"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#F5A1D9"/>
            </LinearLayout>

            <!-- Details lines -->
            <TextView
                android:id="@+id/tvDose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Dose: 0"
                android:textSize="15sp"
                android:textColor="#000000"/>

            <TextView
                android:id="@+id/tvRoute"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Route: Tablet"
                android:textSize="15sp"
                android:textColor="#000000"/>

            <TextView
                android:id="@+id/tvFrequency"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Frequency: 0"
                android:textSize="15sp"
                android:textColor="#000000"/>

            <TextView
                android:id="@+id/tvDuration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Duration: 0 months"
                android:textSize="15sp"
                android:textColor="#000000"/>
        </LinearLayout>

        <!-- Patient id at bottom (white area) -->
        <TextView
            android:id="@+id/tvPatientIdBottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Patient ID: 68bdd5688483bbd3e25336f4"
            android:textSize="14sp"
            android:textColor="#555555"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>
