<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/coordinator"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- Header -->
    <FrameLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@drawable/header_background"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <!-- Back button on left -->
        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_gravity="start|center_vertical"
            android:src="@drawable/ic_arrow_back"
            android:contentDescription="back"
            android:padding="6dp" />

        <!-- Title & subtitle -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="56dp">

            <TextView
                android:id="@+id/tvGreeting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Medical Records"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/tvSubtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Comprehensive health data overview"
                android:textSize="16sp"
                android:textColor="#000000" />
        </LinearLayout>

        <!-- Right-side actions: Settings and Logout -->
        <LinearLayout
            android:id="@+id/header_actions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="end|center_vertical"
            android:gravity="center_vertical"
            android:layout_marginEnd="8dp">

            <ImageView
                android:id="@+id/btnSettings"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@android:drawable/ic_menu_preferences"
                android:contentDescription="settings"
                android:padding="6dp"
                android:tint="#000000" />

            <View
                android:layout_width="10dp"
                android:layout_height="1dp" />

            <ImageView
                android:id="@+id/btnLogout"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@android:drawable/ic_lock_power_off"
                android:contentDescription="logout"
                android:padding="6dp"
                android:tint="#000000" />
        </LinearLayout>
    </FrameLayout>

    <!-- Section title -->
    <TextView
        android:id="@+id/tvSectionTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Patient medical records"
        android:textSize="18sp"
        android:textColor="#111111"
        android:textStyle="bold"
        android:layout_marginStart="16dp"
        android:layout_marginTop="132dp" />

    <!-- Scrollable stacked cards -->
    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="164dp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:clipToPadding="false">

        <LinearLayout
            android:id="@+id/containerCards"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="24dp">

            <!-- Complaints -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardComplaints"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="4dp"
                app:cardCornerRadius="18dp"
                app:cardUseCompatPadding="true"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/imgComplaints"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/ic_complaints"
                        android:contentDescription="Complaints illustration"
                        android:scaleType="fitCenter"
                        android:layout_marginEnd="16dp" />

                    <TextView
                        android:id="@+id/tvComplaints"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Complaints"
                        android:textSize="22sp"
                        android:textColor="#000000" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Comorbidities -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardComorbidities"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="4dp"
                app:cardCornerRadius="18dp"
                app:cardUseCompatPadding="true"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/imgComorbidities"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/ic_comorbidities"
                        android:contentDescription="Comorbidities illustration"
                        android:scaleType="fitCenter"
                        android:layout_marginEnd="16dp" />

                    <TextView
                        android:id="@+id/tvComorbidities"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Comorbidities"
                        android:textSize="22sp"
                        android:textColor="#000000" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Disease Scores -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardDiseaseScores"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="4dp"
                app:cardCornerRadius="18dp"
                app:cardUseCompatPadding="true"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/imgDiseaseScores"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/ic_disease_scores"
                        android:contentDescription="Disease scores illustration"
                        android:scaleType="fitCenter"
                        android:layout_marginEnd="16dp" />

                    <TextView
                        android:id="@+id/tvDiseaseScores"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Disease Scores"
                        android:textSize="22sp"
                        android:textColor="#000000" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Medications -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardMedications"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="4dp"
                app:cardCornerRadius="18dp"
                app:cardUseCompatPadding="true"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/imgMedications"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/ic_medications"
                        android:contentDescription="Medications illustration"
                        android:scaleType="fitCenter"
                        android:layout_marginEnd="16dp" />

                    <TextView
                        android:id="@+id/tvMedications"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Medications"
                        android:textSize="22sp"
                        android:textColor="#000000" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Investigations -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardInvestigations"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="4dp"
                app:cardCornerRadius="18dp"
                app:cardUseCompatPadding="true"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/imgInvestigations"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/ic_investigations"
                        android:contentDescription="Investigations illustration"
                        android:scaleType="fitCenter"
                        android:layout_marginEnd="16dp" />

                    <TextView
                        android:id="@+id/tvInvestigations"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Investigations"
                        android:textSize="22sp"
                        android:textColor="#000000" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Treatments -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardTreatments"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="4dp"
                app:cardCornerRadius="18dp"
                app:cardUseCompatPadding="true"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/imgTreatments"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/ic_treatments"
                        android:contentDescription="Treatments illustration"
                        android:scaleType="fitCenter"
                        android:layout_marginEnd="16dp" />

                    <TextView
                        android:id="@+id/tvTreatments"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Treatments"
                        android:textSize="22sp"
                        android:textColor="#000000" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Referrals -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardReferrals"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="4dp"
                app:cardCornerRadius="18dp"
                app:cardUseCompatPadding="true"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/imgReferrals"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/ic_referrals"
                        android:contentDescription="Referrals illustration"
                        android:scaleType="fitCenter"
                        android:layout_marginEnd="16dp" />

                    <TextView
                        android:id="@+id/tvReferrals"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Referrals"
                        android:textSize="22sp"
                        android:textColor="#000000" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
