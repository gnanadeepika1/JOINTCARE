<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Hb â†’ RA Factor (same as before) -->

        <EditText
            android:id="@+id/etHb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Hb"
            android:inputType="text"
            android:padding="10dp"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/etTlc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Total Leukocyte Count"
            android:inputType="text"
            android:padding="10dp"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/etDc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Differential Count"
            android:inputType="text"
            android:padding="10dp"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/etPlatelet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Platelet Count"
            android:inputType="text"
            android:padding="10dp"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/etEsr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="ESR"
            android:inputType="text"
            android:padding="10dp"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/etCrp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="CRP"
            android:inputType="text"
            android:padding="10dp"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/etLftTotalBilirubin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="LFT Total Bilirubin"
            android:inputType="text"
            android:padding="10dp"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/etLftDirectBilirubin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="LFT Direct Bilirubin"
            android:inputType="text"
            android:padding="10dp"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/etAst"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="AST"
            android:inputType="text"
            android:padding="10dp"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/etAlt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="ALT"
            android:inputType="text"
            android:padding="10dp"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/etAlbumin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Albumin"
            android:inputType="text"
            android:padding="10dp"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/etTotalProtein"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Total Protein"
            android:inputType="text"
            android:padding="10dp"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/etGgt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="GGT"
            android:inputType="text"
            android:padding="10dp"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/etUrea"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Urea"
            android:inputType="text"
            android:padding="10dp"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/etCreatinine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Creatinine"
            android:inputType="text"
            android:padding="10dp"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/etUricAcid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Uric Acid"
            android:inputType="text"
            android:padding="10dp"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/etUrineRoutine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Urine Routine"
            android:inputType="text"
            android:padding="10dp"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/etUrinePcr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Urine PCR"
            android:inputType="text"
            android:padding="10dp"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/etRaFactor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="RA Factor"
            android:inputType="text"
            android:padding="10dp"
            android:layout_marginBottom="8dp"/>

        <!-- NEW: ANTI CCP at the bottom -->
        <EditText
            android:id="@+id/etAntiCcp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="ANTI CCP"
            android:inputType="text"
            android:padding="10dp"
            android:layout_marginBottom="8dp"/>

    </LinearLayout>
</ScrollView>
